@model ManageMe.BusinessLogic.BatchCreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsForOlympiadParticipants" class="control-label"></label>
                <input asp-for="IsForOlympiadParticipants" type="checkbox" />
                <span asp-validation-for="IsForOlympiadParticipants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Study Domain</label>
                <select id="SelectStudyDomainId" asp-for="StudyDomainId" class="form-control" asp-items="ViewBag.StudyDomainId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript" src="~/js/FetchDataIntoSelect.js"></script>
<script type="text/javascript">
    FetchDataIntoSelect('SelectStudyDomainId', 'StudyDomains/GetAllStudyDomainsAsSelectList');
</script>